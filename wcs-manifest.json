      "organization": "NOI AG",
      "organizationUrl": "https://noi.bz.it"
    }
  ],
  "image": "wcs-logo.png",
  "searchTags": [
    "activities",
    "poi",
    "gastronomy"
  ],
  "dist": {
    "basePath": "dist",
    "files": [
      "odh-tourism-detail.min.js"
    ],
    "scripts": [
      {
        "file": "odh-tourism-detail.min.js",
        "parameter": ""
      }
    ]
  },
  "configuration": {
    "tagName": "odh-tourism-detail",
    "options": [
      {
        "key": "content-type",
        "type": "select",
        "label": "Type of list items",
        "required": false,
        "options": {
          "default": "All",
          "values": [
            "All",
            "Gastronomy",
            "Activity",
            "POI"
          ]
        }
      },
      {
        "key": "content-id-list",
        "type": "text",
        "label": "List of content ids (see bottom right of a detail card; must match with the content type)",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "category",
        "type": "text",
        "label": "Maincategory.\n BITMASK: 1 = Wellness, 2 = Winter, 4 = Summer, 8 = Culture, 16 = Other, 32 = Gastronomy, 64 = Mobility, 128 = Shops and services, Default: null",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "subcategory",
        "type": "text",
        "label": "Subcategory. \n Depending on the selected Maincategory, BITMASK values available at (https://tourism.opendatahub.bz.it/v1/ODHActivityPoiTypes?rawfilter=eq(Type,%27SubType%27))",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "language",
        "required": false,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "de"
        }
      },
      {
        "key": "source-filter",
        "type": "select",
        "label": "Filter by dataprovider",
        "required": false,
        "options": {
          "values": [
            "lts",
            "idm",
            "siag",
            "dss",
            "suedtirolwein",
            "sta",
            "archapp"
          ],
          "default": null
        }
      },
      {
        "key": "loc-filter",
        "type": "text",
        "label": "Location Filter (pass type + id check out https://tourism.opendatahub.bz.it/v1/Location)",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "with-image-only",
        "type": "null",
        "label": "Display only data where Images with  CC0 License are available",
        "required": false,
        "options": {          
          "default": true
        }
      },
      {
        "key": "enable-placeholder",
        "type": "null",        
        "label": "Enable Image Placeholder",
        "required": false,
        "options": {          
          "default": true
        }
      },
      {
        "key": "page-size",
        "type": "number",
        "label": "Number of list items per page",
        "required": false,
        "options": {
          "default": 20
        }
      }
    ]
  }
}
